---
import Layout from "../layouts/Layout.astro";
---

<Layout title="R&L Packaging">
  <main>
    <nav class="w-full bg-gray-500 h-24 flex justify-between items-center">
      <img src="/logo.svg" alt="" width="100" alt="logo" />
      <ul class="sm:flex justify-around w-1/3 hidden">
        <li>Home</li>
        <li>About</li>
        <li>History</li>
        <li>Contact</li>
      </ul>
      <ul class="sm:flex hidden">
        <li>
          <img src="./envelope.svg" alt="Email" />
        </li>
        <li>
          <img src="./geo-alt-fill.svg" alt="Address" />
        </li>
        <li><img src="./telephone-fill.svg" alt="Phone" /></li>
      </ul>
      <img
        src="./list.svg"
        alt="Menu"
        class="pr-5 cursor-pointer block sm:hidden"
      />
    </nav>
    <section class="grid grid-cols-2 place-items-center">
      <div>
        <h1 class="text-4xl">R&L Packaging</h1>
        <h2>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Facilis quo
          hic officia. Cupiditate, autem et! Ducimus expedita natus debitis nam?
        </h2>
      </div>
    </section>
  </main>
</Layout>
